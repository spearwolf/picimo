{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDirs": ["./src/"],
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": false,
    "sourceMap": false,
    "declarationMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es5",
      "es2015.collection",
      "es2015.iterable",
      "es2015.promise"
    ],
    "types": [
      "jest"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./node_modules",
    "./lib"
  ]
}
