{
  "name": "picimo",
  "version": "0.0.37",
  "description": "A typescript library for my personal visual effects and game dev experiments based on three.js",
  "main": "./picimo.js",
  "module": "./picimo.js",
  "exports": "./picimo.js",
  "types": "types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build:modern": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.js",
    "watch:modern": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "build": "run-s --silent build:modern build:types",
    "watch": "run-p --silent watch:types watch:modern",
    "clean": "rm -fr build coverage dist types picimo.js picimo.js.map",
    "cbt": "run-s --silent clean build test",
    "prepublishOnly": "run-s --silent cbt",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s --silent --print-label eslint:fix prettier:write",
    "test": "cross-env NODE_ENV=test jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spearwolf/picimo.git"
  },
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/spearwolf/picimo/issues"
  },
  "homepage": "https://github.com/spearwolf/picimo#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/three": "^0.127.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "assert": "^2.0.0",
    "canvas": "^2.6.1",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-problems": "^5.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lodash": "^4.17.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.7.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "sinon": "^10.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.13.10",
    "eventize-js": "^1.1.0",
    "three": "^0.127.0"
  }
}
