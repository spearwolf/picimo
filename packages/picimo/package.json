{
  "name": "picimo",
  "version": "0.0.24-pre",
  "description": "A typescript library for my personal visual gfx and game dev experiments based on three.js",
  "main": "dist/picimo.min.js",
  "module": "build/index.js",
  "types": "src/index.ts",
  "sideEffects": false,
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build:dist:umd": "cross-env NODE_ENV=production rollup -c ./rollup.config.js",
    "build:dist:mjs": "cross-env NODE_ENV=production rollup -c ./rollup-mjs.config.js",
    "build:dist": "run-s build:dist:*",
    "build:module": "cross-env BABEL_ENV=production babel --root-mode upward src/ --extensions \".ts\" --out-dir ./build/ --source-maps",
    "watch:build:module": "cross-env BABEL_ENV=production babel --root-mode upward src/ --extensions \".ts\" --out-dir ./build/ --source-maps --watch",
    "build": "run-s build:*",
    "prepublishOnly": "npm-run-all --serial clean --parallel build:*",
    "clean": "rimraf build coverage dist",
    "test:eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test:karma": "cross-env NODE_ENV=test karma start --single-run",
    "watch:test": "cross-env NODE_ENV=test karma start",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s eslint:fix prettier:write",
    "test": "run-s test:karma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spearwolf/picimo.git"
  },
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/spearwolf/picimo/issues"
  },
  "homepage": "https://github.com/spearwolf/picimo#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "assert": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^6.0.0",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-problems": "^4.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "lerna": "^3.20.2",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.1.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.11.0",
    "rollup-plugin-terser": "^5.3.0",
    "three": "^0.114.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "peerDependencies": {
    "three": "^0.113.2"
  },
  "dependencies": {
    "eventize-js": "^1.0.0"
  }
}
