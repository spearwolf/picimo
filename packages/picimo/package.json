{
  "name": "picimo",
  "version": "0.0.34-alpha",
  "description": "A typescript library for my personal visual gfx and game dev experiments based on three.js",
  "main": "dist/picimo.min.js",
  "module": "build/index.js",
  "types": "src/index.ts",
  "sideEffects": false,
  "scripts": {
    "build:dist:umd": "cross-env NODE_ENV=production rollup -c ./rollup/umd.config.js",
    "build:dist:mjs": "cross-env NODE_ENV=production rollup -c ./rollup/mjs.config.js",
    "build:dist": "run-s build:dist:*",
    "build:module": "cross-env BABEL_ENV=production babel --root-mode upward src/ --extensions \".ts\" --out-dir ./build/ --source-maps",
    "watch:build:module": "cross-env BABEL_ENV=production babel --root-mode upward src/ --extensions \".ts\" --out-dir ./build/ --source-maps --watch",
    "build": "run-s build:*",
    "prepublishOnly": "npm-run-all --serial clean --parallel build:*",
    "clean": "rm -fr build coverage dist",
    "test:eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s eslint:fix prettier:write",
    "check:types": "tsc",
    "jest": "cross-env NODE_ENV=test jest",
    "test": "run-s check:types jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spearwolf/picimo.git"
  },
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/spearwolf/picimo/issues"
  },
  "homepage": "https://github.com/spearwolf/picimo#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "assert": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "canvas": "^2.6.1",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-problems": "^5.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "karma-mocha-reporter": "^2.2.5",
    "lerna": "^3.20.2",
    "lodash": "^4.17.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.7.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^9.0.1",
    "three": "^0.124.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "three": "^0.124.0"
  },
  "dependencies": {
    "eventize-js": "^1.1.0"
  }
}
