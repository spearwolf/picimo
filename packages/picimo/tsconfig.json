{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "target": "ES2020",
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "ES2020",
    ],
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": ".typings"

  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false
}
